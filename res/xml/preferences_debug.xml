<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <PreferenceCategory 
        android:title="@string/preferences_debug_global">
        
        <CheckBoxPreference 
            android:title="@string/preferences_debug_enabled_title"
            android:summary="@string/preferences_debug_enabled_summary"
            android:key="debugging_enabled" />
        
        <CheckBoxPreference 
            android:title="@string/preferences_launcher_icon_enabled_title"
            android:summary="@string/preferences_launcher_icon_enabled_summary"
            android:key="hide_launcher_icon"
            android:defaultValue="false"/>
    </PreferenceCategory>
    
</PreferenceScreen>